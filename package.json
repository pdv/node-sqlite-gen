{
  "name": "@pdv/sqlite-gen",
  "version": "0.2.1",
  "type": "module",
  "bin": {
    "sqlite-gen": "dist/sqlite-gen.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "gen": "tsx sqlite-gen.ts tests/queries.sql tests/node/queries.gen.ts node",
    "gen:d1": "tsx sqlite-gen.ts tests/queries.sql tests/d1/queries.gen.d1.ts d1",
    "typecheck": "wrangler types tests/d1/worker-configuration.d.ts && tsc --noEmit",
    "test:node": "tsx tests/node/node.test.ts",
    "test:d1": "vitest run tests/d1/d1.test.ts",
    "test": "npm run gen && npm run gen:d1 && npm run typecheck && npm run test:node && npm run test:d1",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sqlite",
    "sql",
    "codegen",
    "typescript",
    "node",
    "cloudflare",
    "d1"
  ],
  "author": "pdv",
  "license": "ISC",
  "description": "Generate Typescript from SQL for node:sqlite or Cloudflare D1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdv/sqlite-gen.git"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.8",
    "@cloudflare/workers-types": "^4.20251001.0",
    "@types/node": "^24.6.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.3"
  }
}
